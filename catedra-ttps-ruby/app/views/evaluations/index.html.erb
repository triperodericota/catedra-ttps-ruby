<p id="notice"><%= notice %></p>

<h2>Evaluaciones</h2>
<div class="row">
  <div class="col-md-10">
    <ul class="list-group">
      <% @evaluations.each do |evaluation| %>
        <li class="list-group-item justify-content-between">
          <%= link_to evaluation.title , evaluation, :class => 'list-item-show-link' %>
          <%= link_to edit_evaluation_path(evaluation), :class => 'btn btn-success list-item-action-link', :role => 'button' do %>
            <span class="fa fa-edit fa-lg"></span> Editar
          <% end %>
          <%= link_to evaluation_path(evaluation) , :method => 'delete', :class => 'btn btn-danger list-item-action-link',
                      data: { confirm: 'Are you sure?' }, :role => 'button' do %>
            <span class="fa fa-trash-o fa-lg"></span> Eliminar
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
