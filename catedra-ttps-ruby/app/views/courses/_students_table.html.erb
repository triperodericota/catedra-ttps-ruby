<table class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>Apellido</th>
    <th>Nombre</th>
  </tr>
  </thead>
  <tbody>
  <% student_number = 1 %>
  <% @course.students.each do |student| %>
    <tr>
      <th scope="row"><%= student_number %></th>
      <td><%= student.last_name %></td>
      <td><%= student.first_name %></td>
      <% student_number = student_number.next %>
    </tr>
  <% end %>
  </tbody>
</table>