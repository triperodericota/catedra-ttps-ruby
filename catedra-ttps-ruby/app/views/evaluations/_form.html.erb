<%= simple_form_for(@evaluation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: 'Titulo', placeholder: 'Ingrese el título descriptivo', error: 'Debe ingresar un título' %>
    <%= f.input :approbation_grade, label: 'Nota de aprobación', placeholder: 'Ingrese la nota mínima necesaria para aprobar', error: 'Debe ingresar la nota necesaria para aprobar', input_html:{ min: '0', max: '100', step: '0.1'}  %>
    <%= f.input :date, label: 'Fecha', error: 'Debe ingresar la fecha de evaluación' %>
    <%= f.association :course, label: 'Cursadas' ,  collection: Course.all.order(:year), label_metod: :to_s, value_method: :id, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Guardar', class: 'btn btn-primary' %>
    <span>  </span>
    <%= link_to 'Cancelar', evaluations_path , :class => 'btn btn-default', :role => 'button' %>
  </div>

<% end %>
